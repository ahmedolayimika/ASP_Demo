@model Categories
<div>
    <form method="post" asp-action="DeleteItem">
        <input asp-for="ID" hidden />
        <h2 class="text-black"> Delete Category Item</h2>
        <div class="mb-3">
            <label class="form-label" asp-for="Name">Name</label>
            <input type="text" class="form-control" id="Name" asp-for="Name" disabled>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="DisplayOrder">Display Order</label>
            <input type="number" class="form-control" id="DisplayOrder" asp-for="DisplayOrder" disabled>

        </div>
        <div>
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <button class="btn btn-outline-secondary" asp-controller="Category" asp-action="Index">Cancel</button>

        </div>
    </form>

</div>